<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvresults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:textSize="48sp"></TextView>

    <TextView
        android:id="@+id/tvcontrol"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:textSize="45sp"></TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84sp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/buttonclr"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:text="C"
               ></Button>
        <Button
            android:id="@+id/buttonabs"
            android:layout_width="64sp"
            android:layout_height="84sp"
            android:text="+/-"
            android:background="@android:color/holo_orange_light"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_weight="1"
            ></Button>

            <Button
                android:id="@+id/buttoncut"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="x"
                android:textAlignment="center"
                android:textSize="32sp"></Button>
        <Button
            android:id="@+id/buttondiv"
            android:layout_width="64sp"
            android:layout_height="84sp"
            android:text="/"
            android:background="@android:color/holo_orange_light"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_weight="1"
            ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84sp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/button9"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:text="9"></Button>

            <Button
                android:id="@+id/button8"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:text="8"></Button>

            <Button
                android:id="@+id/button7"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:text="7"></Button>
            <Button
                android:id="@+id/buttonmul"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="*"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84sp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button6"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="6"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>


            <Button
                android:id="@+id/button5"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"

                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:text="5"></Button>

            <Button
                android:id="@+id/button4"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:text="4"></Button>
            <Button
                android:id="@+id/buttonsub"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="-"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84sp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button3"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="3"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/button2"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="2"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/button1"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="1"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buttonadd"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="+"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84sp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button0"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="0"
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="2"
                ></Button>

            <Button
                android:id="@+id/buttondot"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="."
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
            <Button
                android:id="@+id/buttoneq"
                android:layout_width="64sp"
                android:layout_height="84sp"
                android:text="="
                android:background="@android:color/holo_orange_light"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_weight="1"
                ></Button>
        </LinearLayout>

</LinearLayout>